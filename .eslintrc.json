{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "ignorePatterns": ["dist/**/*.js"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "process": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    },
    "overrides": [
        {
            "files": ["./*.js"],
            "env": {
                "node": true
            }
        }
    ]
}
